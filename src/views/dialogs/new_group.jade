md-dialog(aria-label="Add Group" style="height:240px")
	md-toolbar
		div.md-toolbar-tools
			h2 {{'%NEW_GROUP%' | translate}}
			span(flex)
	form(name="form")
		md-input-container()
			label {{'%GROUP_NAME%' | translate}}
			input(autofocus ng-model="newGroupName" name="groupname" ng-pattern="/^[a-zA-Z0-9][a-zA-Z0-9]{2,19}$/" ng-maxlength="20" ng-minlength="4" required)
			div(ng-messages="form.groupname.$invalid" ng-show="form.groupname.$invalid || form.groupname.$error.required")
				div(ng-message='required') {{'%LENGTH_RULE_4-20%' | translate}}
	div(class="md-actions" layout="row")
		span(flex)
		md-button(ng-click="cancel()" class="md-raised") {{'%CANCEL%' | translate}}
		md-button(ng-click="add()" ng-disabled="form.$invalid" class="md-raised md-warn") {{'%ADD%' | translate}}