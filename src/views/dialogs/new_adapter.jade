md-dialog(aria-label="Add Adapter" style="height:550px;width:500px")
    md-toolbar(style="height:80px")
        div.md-toolbar-tools
        h2(flex style="padding:0 10px;") {{'%ADD_ADAPTER%' | translate}}
    form(name="adapterForm" style="padding:10px;")
        md-select(ng-model="adapterCategory" placeholder="Broker" aria-label="Broker" flex="25" style="margin:10px 0; background:white;")
          md-option(ng-repeat="broker in brokers" value="{{broker.category}}") {{broker.category}}
        md-input-container(style="margin-top:10px")
          label {{'%ID%' | translate}}
          input(autofocus name="newAdapterId" ng-model="newAdapterId" ng-maxlength="20" ng-minlength="3" ng-pattern="/^[a-zA-Z0-9][a-zA-Z0-9]{2,19}$/" required)
          div(ng-messages="adapterForm.newAdapterId.$invalid" ng-show="adapterForm.newAdapterId.$invalid")
            div(ng-message) {{'%LENGTH_RULE_3-20%' | translate}}
        md-select(ng-model="type" placeholder="Type" aria-label="Adapter Type" flex="25" style="margin:0px; background:white;")
          md-option(ng-repeat="type in types" value="{{type}}") {{type}}
        md-input-container(style="padding:2px")
          label {{'%PROPERTIES%' | translate}}
          textarea(aria-label="Adapter Properties" rows="12" cols="25" style="padding:10px;height:200px" ng-trim="false" ng-model="newAdapterTextArea.text")
    div(style="position:absolute; bottom: 0px" class="md-dialog-actions" layout="row")
      md-button(ng-click="addAdapter()" class="md-raised md-warn" ng-disabled="adapterForm.$invalid") {{'%ADD%' | translate}}
      md-button(ng-click="cancel()" class="md-raised") {{'%CANCEL%' | translate}}